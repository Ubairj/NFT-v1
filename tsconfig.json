{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist"
  },
  "include": [
    "hardhat.config.ts",
    "./src",
    "./deploy",
    "./test"
  ],
  "exclude": [
    "node_modules/**",
    "<node_internals>/**",
    "dist",
  ]
}
